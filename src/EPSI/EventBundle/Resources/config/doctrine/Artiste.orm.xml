<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EPSI\EventBundle\Entity\Artiste" table="ARTISTE">
    <id name="idArtiste" type="integer" column="id_artiste">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nomArtiste" type="string" column="nom_artiste" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="descriptionArtiste" type="string" column="description_artiste" length="5000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbVisiteArtiste" type="integer" column="nb_visite_artiste" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="lienImage" type="string" column="lien_image" length="250" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idEvenement" target-entity="Evenement" mapped-by="idArtiste" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
