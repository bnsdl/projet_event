<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EPSI\EventBundle\Entity\Commentaire" table="COMMENTAIRE">
    <indexes>
      <index name="FK_COMMENTAIRE_id_evenement" columns="id_evenement"/>
    </indexes>
    <id name="idCommentaire" type="integer" column="id_commentaire">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="commentaire" type="string" column="commentaire" length="300" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="idEvenement" target-entity="Evenement" fetch="LAZY">
      <join-columns>
        <join-column name="id_evenement" referenced-column-name="id_evenement"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
