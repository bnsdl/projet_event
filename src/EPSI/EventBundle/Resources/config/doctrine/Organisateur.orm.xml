<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EPSI\EventBundle\Entity\Organisateur" table="ORGANISATEUR">
    <id name="idOrganisateur" type="integer" column="id_organisateur">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nomOrganisateur" type="string" column="nom_organisateur" length="256" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="descriptionOrganisateur" type="string" column="description_organisateur" length="5000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="ville" type="string" column="ville" length="200" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lienImage" type="string" column="lien_image" length="200" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idEvenement" target-entity="Evenement" inversed-by="idOrganisateur" fetch="LAZY">
      <join-table name="organiser">
        <join-columns>
          <join-column name="id_organisateur" referenced-column-name="id_organisateur"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_evenement" referenced-column-name="id_evenement"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
